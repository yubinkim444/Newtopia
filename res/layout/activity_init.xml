<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_init"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.msi.testshin.InitActivity"
    android:orientation="vertical"
    android:elevation="0dp">


    <ImageView
        android:src="@drawable/page_1"
        android:layout_marginTop="70.5dp"
        android:paddingLeft="28.7dp"
        android:paddingRight="28.7dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    
    <TextView
        android:text="new debate with news topic"
        android:textSize="11dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="130dp"

        android:layout_width="match_parent"
        android:layout_height="13dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id"

            android:layout_marginTop="50dp"

            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:hint="e-mail adress"
            android:layout_marginLeft="55dp"
            android:textSize="14dp"

            />
        <EditText
            android:id="@+id/pass"
            android:layout_marginLeft="55dp"

            android:layout_marginTop="20dp"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="password"
            android:textSize="14dp"
            android:layout_above="@+id/button_register" />
    </LinearLayout>






    <!--<Button-->
        <!--android:text="둘러보기"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/button_goMain"-->
        <!--android:layout_below="@+id/com_kakao_login"-->
        <!--android:layout_alignLeft="@+id/button_register"-->
        <!--android:layout_alignStart="@+id/button_register"-->
        <!--android:layout_marginTop="24dp" />-->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_marginTop="20dp"
        android:text="로그인"
        android:background="@drawable/custombutton"

        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/login"

        android:layout_toRightOf="@+id/pass"
        android:layout_toEndOf="@+id/pass"
        android:onClick="login"/>

    <Button

        android:layout_marginTop="20dp"
        android:text="회원가입"
        android:background="@color/white"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:id="@+id/button_register" />
    </LinearLayout>
    <com.kakao.usermgmt.LoginButton
        android:layout_marginTop="20dp"
        android:id="@+id/com_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_below="@+id/button_register"/>
</LinearLayout>
