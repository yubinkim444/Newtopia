<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_weight="4"
        android:background="@drawable/like_parser"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="30dp"
                android:paddingTop="20dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/discussionText"
                android:textSize="20dp"

                android:textColor="#ffffff"
                android:layout_weight="1" />
            <TextView
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/ContentsName"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:gravity="center_vertical"

                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/idText"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:layout_weight="1" />

            <TextView
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/dateText"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="110dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp">

            <ImageView
                android:id="@+id/blueAnimation"
                android:background="#85182cef"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/redAnimation"
                android:background="#8cef3458"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/imageView1"
        android:layout_weight="1" />
</LinearLayout>